h1, h2, h3, h4, h5, h6
  font-weight normal
  line-height 1.25
  color #000000
  .content__default:not(.custom) > &
    margin-top (- 3.5rem)


h1
  font-size 1.8rem

h2
  font-size 1.4rem
  padding-bottom 0.8rem

h3
  font-size 1.2rem


table
  border-collapse collapse
  display inline-table
  width 100%
  margin 1rem 0
  overflow-x: auto

  tr
    border-top 1px solid var($borderColor)

    &:nth-child(2n)
      background-color var($borderColor)

  th, td
    border 1px solid var($borderColor)
    padding .6em 1em

  tr td:first-child
    width 8rem

  thead
    tr
      th
        font-weight normal
        color $infoColor


p
  color $infoColor



