h1, h2, h3, h4, h5, h6
  font-weight normal
  line-height 2.5
  color #000000
  .content__default:not(.custom) > &
    margin-top (- 3.5rem)


h1
  font-size 1.8rem

h2
  font-size 1.4rem


h3
  font-size 1.2rem


h4
  font-size 1rem
  padding-top 3rem !important

table
  border-collapse collapse
  display inline-table
  width 100%
  margin 1rem 0
  overflow-x: auto

  tr
    border-top 1px solid var($borderColor)

    &:nth-child(2n)
      background-color var($borderColor)

  th, td
    border 1px solid var($borderColor)
    padding .6em 1em

  tr td:first-child
    width 8rem

  thead
    tr
      th
        font-weight normal
        color $infoColor


p
  color $infoColor




/*手机外壳效果*/
.device-ios {
  width: 300px;
  height: 600px;
  background: #111;
  border-radius: 20px;

  padding: 40px 3px;
  position: relative;
  margin-right: 80px;
}
.device-ios:before {
  content: '';
  width: 60px;
  height: 10px;
  border-radius: 10px;
  position: absolute;
  left: 50%;
  margin-left: -30px;
  background: #333;
  top: 16px;
}
.device-ios:after {
  content: '';
  position: absolute;
  width: 20px;
  height: 20px;
  left: 50%;

  bottom:10px;
  border-radius: 100%;
  box-sizing: border-box;
  border: 5px solid #00facc;
  box-shadow: 0px 0px 2px 2px #00facc;
}
.device-inner {
  background-color: #FFF;
  height: 100%;
  border-radius: 5px;
}

